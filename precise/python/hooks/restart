#!/bin/bash

APP_DIR=/home/application
CURRENT_DIR=${APP_DIR}/current

[ -f ${APP_DIR}/apprc ] && source ${APP_DIR}/apprc

if [ -d ${CURRENT_DIR} ]
then
    cd ${CURRENT_DIR}
    find . -name \*.pyc -delete
    find . -name \*.pyo -delete
    echo "Starting..."
    circusctl stop
    circusctl start
fi
