#!/bin/bash

APP_DIR=/home/application
CURRENT_DIR=${APP_DIR}/current

[ -f ${APP_DIR}/apprc ] && source ${APP_DIR}/apprc

if [ -d ${CURRENT_DIR} ]
then
    cd ${CURRENT_DIR}
    if [ -f Procfile ]
    then
        echo "Checking Procfile"
        foreman check
        echo "Starting..."
        sudo foreman export upstart -u ubuntu /etc/init
        sudo start app
    else
        echo "Procfile not found!"
    fi
fi
