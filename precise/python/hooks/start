#!/bin/bash

APP_DIR=/home/application
CURRENT_DIR=${APP_DIR}/current

[ -f ${APP_DIR}/apprc ] && source ${APP_DIR}/apprc

if [ -d ${CURRENT_DIR} ]
then
    cd ${CURRENT_DIR}
    if [ -f Procfile ]
    then
        echo "Starting..."
        foreman start > ${APP_DIR}/foreman.log 2>&1 &
        echo $! > $APP_DIR/foreman.pid
        cat ${APP_DIR}/foreman.log
    else
        echo "Procfile not found!"
    fi
fi
