#!/usr/bin/env bash

set -e

APP_DIR=/home/application
VIRTUALENV=${APP_DIR}/env
CURRENT_DIR=${APP_DIR}/releases/current
export http_proxy=http://proxy01.globoi.com:3128
export https_proxy=

if [ -f ${CURRENT_DIR}/requirements.txt ]; then
    ${VIRTUALENV}/bin/pip install -r ${CURRENT_DIR}/requirements.txt
fi

if [ -f ${CURRENT_DIR}/requirements.yum ]; then
    yum install $(cat ${CURRENT_DIR}/requirements.yum) --assumeyes --quiet --enablerepo=epel
fi
